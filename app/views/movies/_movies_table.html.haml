%table#movies.table.table-striped
  %tbody
    - movies.each_with_index do |movie, i|
      %tr.movie
        %td= i + 1
        %td
          %img.img-rounded.img-thumbnail.movie-cover
        %td
          %h4
            = link_to movie.title, movie_path(movie), class: 'movie-title'
          %p
            %strong
              = link_to movie.genre.name, movies_genre_path(movie.genre)
            = ' (' + movie.released_at.to_s + ')'
          %p.movie-description
= paginate movies
